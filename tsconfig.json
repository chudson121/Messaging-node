{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true, 
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "outDir": "./dist",
      "paths": {
        "*": ["src/*"]
      },
      "rootDir": "./src",
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "target": "es6",
      "typeRoots": ["node_modules/@types"]
    },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]


  }